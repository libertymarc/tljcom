---
import { Icon } from 'astro-icon/components'

const { src = '/astronaut-hero-img.webp' } = Astro.props
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24">
      <div class="flex flex-col items-center gap-8">
        <h1 class="text-center text-6xl lg:text-8xl">
          <slot><span class="text-gradient">The Liberty Journey</span></slot>
        </h1>
        <!-- <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="https://github.com/incluud/accessible-astro-starter">
            <Icon name="ion:star-outline" />
            Star on GitHub
          </a>
          <a class="button has-icon color-secondary" href="https://accessible-astro.incluud.dev/">
            <Icon name="ion:bookmark-outline" />
            Read the Docs
          </a>
        </div> -->
      </div>
      <!-- <img class="hidden lg:block" src={src} alt="" decoding="async" /> -->
      <div class="flex flex-col items-center gap-16 text-4xl">
        <h2 class="text-center"></h2>
        <p class="text-center">
          Creating cash-flowing businesses that empower employees to grow into owners and live out their God-inspired
          dreams.
        </p>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .text-gradient {
    background: rgb(131, 58, 180);
    background: linear-gradient(90deg, rgba(131, 58, 180, 1) 0%, rgba(253, 29, 29, 1) 50%, rgba(252, 176, 69, 1) 100%);
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.darkmode .text-gradient) {
    background: rgb(131, 58, 180);
    background: linear-gradient(90deg, rgba(131, 58, 180, 1) 0%, rgba(253, 29, 29, 1) 50%, rgba(252, 176, 69, 1) 100%);
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
